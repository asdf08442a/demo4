<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
  <context id="mbgen" targetRuntime="MyBatis3">

    <plugin type="org.mybatis.generator.plugins.CaseInsensitiveLikePlugin"/>
    <plugin type="org.mybatis.generator.plugins.EqualsHashCodePlugin"/>
    <plugin type="org.mybatis.generator.plugins.SerializablePlugin"/>
    <plugin type="org.mybatis.generator.plugins.ToStringPlugin"/>
    <plugin type="com.xiaoju.manhattan.auto.framework.mybatis.MySqlLimitGeneratorPlugin"/>
    <plugin type="com.xiaoju.manhattan.auto.framework.mybatis.EntityNameSuffixGeneratorPlugin"/>

    <commentGenerator>
      <!-- 指定MBG生成的代码中是否包含任何注释 true为清除注释，false为不清除注释，默认为false -->
      <property name="suppressAllComments" value="false"/>
      <!-- 指定生成的注释中是否包含生成的日期 false:注释中带时间，true:注释中不带时间，默认为false -->
      <property name="suppressDate" value="true"/>
      <!-- 是否把数据库中的注释生成到代码中,默认为false,如果suppressAllComments设置为true,则该选项无效 -->
      <property name="addRemarkComments" value="true"/>
    </commentGenerator>

    <jdbcConnection connectionURL="${jdbc_url}"
      driverClass="${jdbc_driverClassname}"
      password="${jdbc_password}"
      userId="${jdbc_username}"/>

    <!-- models -->
    <javaModelGenerator targetPackage="${package_model}"
      targetProject="${src_gen_java}">
      <property name="enableSubPackages" value="true"/>
      <property name="trimStrings" value="true"/>
    </javaModelGenerator>

    <!-- mapper xml files -->
    <sqlMapGenerator targetPackage="${package_xml}"
      targetProject="${src_gen_resources}">
      <property name="enableSubPackages" value="true"/>
    </sqlMapGenerator>

    <!-- mapper interface -->
    <javaClientGenerator targetPackage="${package_mapper}"
      targetProject="${src_gen_java}"
      type="XMLMAPPER">
      <property name="enableSubPackages" value="true"/>
    </javaClientGenerator>

    <!-- start table list -->
    <table schema="permission" tableName="permission" domainObjectName="Permission">
      <columnOverride column="type"
        javaType="com.enterprise.demo.permission.enums.PermissionTypeEnum" jdbcType="TINYINT"
        typeHandler="com.xiaoju.manhattan.auto.framework.mybatis.CodeEnumTypeHandler"/>
      <columnOverride column="is_use"
        javaType="com.enterprise.demo.permission.enums.StatusEnum" jdbcType="TINYINT"
        typeHandler="com.xiaoju.manhattan.auto.framework.mybatis.CodeEnumTypeHandler"/>
      <columnOverride column="order_num"
        javaType="Integer" jdbcType="TINYINT"/>
    </table>

    <table schema="permission" tableName="role_permission" domainObjectName="RolePermission"/>

    <table schema="permission" tableName="role" domainObjectName="Role">
      <columnOverride column="type"
        javaType="com.enterprise.demo.permission.enums.RoleTypeEnum" jdbcType="TINYINT"
        typeHandler="com.xiaoju.manhattan.auto.framework.mybatis.CodeEnumTypeHandler"/>
      <columnOverride column="is_use"
        javaType="com.enterprise.demo.permission.enums.StatusEnum" jdbcType="TINYINT"
        typeHandler="com.xiaoju.manhattan.auto.framework.mybatis.CodeEnumTypeHandler"/>
      <columnOverride column="is_default"
        javaType="com.enterprise.demo.permission.enums.StatusEnum" jdbcType="TINYINT"
        typeHandler="com.xiaoju.manhattan.auto.framework.mybatis.CodeEnumTypeHandler"/>
    </table>

    <table schema="permission" tableName="tenant_role" domainObjectName="TenantRole"/>

    <table schema="permission" tableName="user_role" domainObjectName="UserRole"/>

    <table schema="permission" tableName="user" domainObjectName="User">
      <columnOverride column="is_use"
        javaType="com.enterprise.demo.permission.enums.StatusEnum" jdbcType="TINYINT"
        typeHandler="com.xiaoju.manhattan.auto.framework.mybatis.CodeEnumTypeHandler"/>
    </table>
    <!-- end table list -->

  </context>
</generatorConfiguration>